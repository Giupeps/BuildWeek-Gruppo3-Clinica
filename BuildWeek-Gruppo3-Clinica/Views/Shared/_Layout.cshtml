@{
    string path = Context.Request.Path;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Reenie+Beanie&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<body>

    <div class="container-fluid d-flex justify-content-between bgprimary">
        <div class="d-flex justify-content-center align-items-center ms-5 ps-5">

            <img src="~/Content/Assets/Img/logologo.png" style="width:350px" />
        </div>
        <div class="sliderContainer">
            <div class="triangle"></div>
            <div class="slider">
                <div class="clip clip1">
                    <div class="content">
                        <h1>Slide One</h1>
                        <p>Slide One Description</p>
                    </div>
                </div>
                <div class="clip clip2">
                    <div class="content">
                        <h1>Slide Two</h1>
                        <p>Slide Two Description</p>
                    </div>
                </div>
                <div class="clip clip3">
                    <div class="content">
                        <h1>Slide One</h1>
                        <p>Slide Two Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg bgsecondary text-end">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end fs-5 " id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/Home") ? "active" : "") text-white" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/Animali/RicoveriAttivi") ? "active" : "") text-white" href="/Animali/RicoveriAttivi">Ricerca Ricoveri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/Tipologia") ? "active" : "") text-white" href="/Tipologia/Index">Gestione Tipologia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/Animali/Index") ? "active" : "") text-white" href="/Animali/Index">Gestione Anagrafica</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/Home/About") ? "active" : "") text-white" href="/Home/About">Cerca il tuo amico</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(path.StartsWith("/Utente/Logout") ? "active" : "") text-white" href="/Utente/Logout">Logout</a>
                        </li>

                    }
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(path.StartsWith("/Utente/Login") ? "active" : "") text-white" href="/Utente/Login">Login Amministratore</a>
                        </li>

                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="body-content mt-5">
        @RenderBody()

        <footer class="bgprimary text-white px-5">
            <div class="mt-4">
                <p><i class="fa-solid fa-building me-3"></i>Green Shelter</p>
                <p><i class="fa-solid fa-map-pin me-3"></i>Via Roma 10, Milano 20019 </p>
                <p><i class="fa-solid fa-file-invoice-dollar me-3"></i>P.I. 12345678910</p>
                <p><i class="fa-solid fa-phone me-3"></i>+39 3394857529</p>
                <p><i class="fa-solid fa-envelope me-3"></i>greenshelter@info.com</p>
            </div>
            <div>

            </div>

        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <script src="https://kit.fontawesome.com/5ae1de6ea9.js" crossorigin="anonymous"></script>
</body>
</html>
